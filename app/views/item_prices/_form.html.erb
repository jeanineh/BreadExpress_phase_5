<%= simple_form_for @item_price, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Item Price</legend>

    <%= f.input :price, input_html: {class: "avg"} %>
    <%= f.input :start_date, input_html: {id: "datepicker"} %>
    <%= f.input :item_id, collection: Item.active.alphabetical, input_html: {class: "avg"} %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', items_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>