<% if logged_in? && current_user.role?(:admin) %>
<div class="panel clearfix">  
  <h4>Manage</h4>
    <p>
      <%= link_to "All Customers", customers_path %><br />
      <%= link_to "All Addresses", addresses_path %><br />
      <%= link_to "All Orders", orders_path %><br />
      <%= link_to "All Items", items_path %>
    </p>
</div>
<% elsif current_user.role?(:customer) %>
  <div class="panel clearfix">  
    <h4>My profile</h4>
      <p>
        <%= link_to "Account Information", customer_path(current_user.customer) %><br />
        <%= link_to "My Addresses", addresses_path %><br />
        <%= link_to "My Orders", orders_path %>
      </p>
  </div>
<% end %>