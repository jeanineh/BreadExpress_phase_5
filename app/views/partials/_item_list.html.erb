<% unless eval("@#{type}").nil? || eval("@#{type}").empty? %>
  <h5><%= "bread".capitalize %></h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="300">Name</th>
        <th width="100">Price</th>
        <th width="100">Units</th>
        <% if controller.controller_name == 'orders' %>
          <th width="100">&nbsp;</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% eval("@#{type}").each do |item| %>
        <tr>
          <td><%= link_to item.name, item_path(item) %></td>
          <td><%= number_to_currency item.current_price %></td>
          <td><%= item.units_per_item %> <%= item.category == 'bread' ? 'loaf' : item.category %></td>
          <% if controller.controller_name == 'orders' && logged_in? %>
            <td>
              <%= link_to(add_to_cart_path(:id => item.id), class: 'button tiny radius') do %>
                &nbsp;Add to Cart&nbsp;
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if !logged_in? %>
    <p>Please <%= link_to "log in", login_path %> to order. Don't have an account? 
      Register <%= link_to "here", signup_path %>. </p>
  <% end %>
<% end %>