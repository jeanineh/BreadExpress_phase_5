<h4>Similar Items: </h4>
<table>
  <% Item.for_category(@item.category).each do |item| %>
    <% if item.picture.blank? %>
      <td class="small_icon"><%= image_tag 'img_not_available.png' %></td>
    <% else %>
      <td class="small_icon"><%= image_tag item.picture %></td>
    <% end %>
    <td><%= link_to item.name, item_path(item) %></td>
  <% end %>
  </tr>
</table>


